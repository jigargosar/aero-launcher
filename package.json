{
  "name": "launch-bar-v2",
  "version": "1.0.0",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev --watch",
    "build": "tsc --noEmit && electron-vite build",
    "preview": "electron-vite preview",
    "release": "pnpm build && electron-builder"
  },
  "build": {
    "appId": "com.launchbar.app",
    "productName": "Launch Bar",
    "win": {
      "target": "squirrel"
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/electron/electron/main/shell/browser/resources/win/electron.ico"
    },
    "extraResources": [
      {
        "from": "src/main/ShellIcon.dll",
        "to": "ShellIcon.dll"
      }
    ]
  },
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "40.0.0",
    "electron-builder": "^26.4.0",
    "electron-builder-squirrel-windows": "^26.4.0",
    "electron-vite": "^5.0.0",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-checker": "^0.12.0",
    "vite-tsconfig-paths": "^6.0.5"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
