{
  "name": "aero-launcher",
  "version": "1.0.0",
  "author": "Jigar Gosar",
  "description": "Fast keyboard-driven app launcher for Windows",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jigargosar/aero-launcher"
  },
  "homepage": "https://github.com/jigargosar/aero-launcher",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev --watch",
    "build": "tsc --noEmit && electron-vite build",
    "preview": "electron-vite preview",
    "release": "pnpm build && electron-builder"
  },
  "build": {
    "appId": "com.aero-launcher.app",
    "productName": "Aero Launcher",
    "win": {
      "target": "squirrel",
      "icon": "assets/icon.ico"
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/jigargosar/aero-launcher/main/assets/icon.ico"
    },
    "artifactName": "${name}-setup-${version}.${ext}",
    "extraResources": [
      {
        "from": "src/main/ShellIcon.dll",
        "to": "ShellIcon.dll"
      }
    ]
  },
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "40.0.0",
    "electron-builder": "^26.4.0",
    "electron-builder-squirrel-windows": "^26.4.0",
    "electron-vite": "^5.0.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-checker": "^0.12.0",
    "vite-tsconfig-paths": "^6.0.5"
  },
  "dependencies": {
    "node-global-key-listener": "^0.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
